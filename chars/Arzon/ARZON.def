; Definition file for Arzon
; Contains all the filenames needed for the character

;Last edit: 08/28/22(Z)
; - Reordered all hurt sprites to fit the recommended group numbers

; Player information
[Info]
name = "Arzon"        ;Name of character
displayname = "ARZON" ;Name of character to display
versiondate = 11,24,2021    ;Version date of character (MM-DD-YYYY or X.XX)
mugenversion = 1.0          ;Version of M.U.G.E.N character works on (X.XX)
author = "Animated by J4RMS31, Dillonator13, PXN, & PsyMaster | Programmed by Kaiba, Z, Taffy, Camji, ScaredCrow, and Ace"       ;Character author name
pal.defaults = 1,2,3,4      ;Default palettes in order of preference (up to 4)
                 ;Numbering starts from 1
localcoord = 280,240        ;Local coordinate space width and height
ikemenversion=0.99

; Files for the player
[Files]
cmd     = Arzon.cmd           ;Command set
cns     = Arzon.cns           ;Constants
st      = Arzon.cns           ;States
st1      = Normals.cns
st2      = Specials.cns
st3      = HyperCombos.cns
st4      = Target.cns
st5      = Movement.cns
stcommon = common1.cns      ;Common states (from data/ or motif)
sprite  = Arzon.sff           ;Sprite
anim    = Arzon.air           ;Animation
sound   = Arzon.snd           ;Sound
ai      = Arzon.ai            ;AI hints data (not used)
movelist=arzon.dat

; Maps character selection buttons to palette numbers.
[Palette Keymap]
x = 1 ;Press button X to select palette 1, etc.
y = 2
z = 3
a = 4
b = 5
c = 6
x2 = 7 ;Hold Start and press button X for palette 7, etc.
y2 = 8
z2 = 9
a2 = 10
b2 = 11
c2 = 12

;Var1 = Special Cancel Counter

